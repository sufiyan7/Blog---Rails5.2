<style type="text/css">
  td {
    padding-left: 15px;
    padding-right: 15px;
  }
 
</style>

<% content_for :body do  %>
  <h1>Listing articles</h1>
   <%= link_to 'New article', new_article_path, class: 'btn btn-info', role: 'button' %>
  <table class="table table-striped" style="margin-top: 12px">
    <thead>
      <tr>
        <th>Title</th>
        <th>Text</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= link_to 'Show', article_path(article) %></td>
        <td><%= link_to 'Edit', edit_article_path(article) if current_user.id == article.user_id %></td>
        <td><%= link_to 'Destroy', article_path(article),
                method: :delete,
                data: { confirm: 'Are you sure?' }  if current_user.id == article.user_id %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= link_to '<< Back', {controller: 'pages', action: 'home'}, class: 'btn btn-info btn-sm', role: 'button'%>
  <% end %>
